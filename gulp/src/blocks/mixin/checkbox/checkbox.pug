mixin checkbox(name, text, ch, cl, outerText, disabled)
    .default-checkbox(class=cl)&attributes(attributes)
        if !outerText
            label.default-checkbox__label
                if disabled
                    input(type="checkbox" name=name checked=ch disabled hidden)
                else
                    input(type="checkbox" name=name checked=ch hidden)
                span(tabindex='0').default-checkbox__custom
                    svg(width="8" height="6"): use(xlink:href="#icon-check")
                span.default-checkbox__text!=text
        else
            label.default-checkbox__label
                if disabled
                    input(type="checkbox" name=name checked=ch disabled hidden)
                else
                    input(type="checkbox" name=name checked=ch hidden)
                span(tabindex='0').default-checkbox__custom
                    svg(width="8" height="6"): use(xlink:href="#icon-check")
                span.default-checkbox__text!=text
            !=outerText
